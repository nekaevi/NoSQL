CREATE KEYSPACE IF NOT EXISTS produtos WITH replication = {'class':'SimpleStrategy','replication_factor':1};

 USE produtos

 CREATE TABLE IF NOT EXISTS produto(           
  	     id UUID PRIMARY KEY, 
             nome VARCHAR,
             preco DECIMAL,
             descricao VARCHAR
             );

